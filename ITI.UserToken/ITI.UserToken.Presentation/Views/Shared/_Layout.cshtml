
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <div class="nav-link active text-white">@Html.ActionLink("Home", "index")</div>
                        <div class="nav-link text-white">@Html.ActionLink("Login", "Login")</div>
                        @*<a class="nav-link active" aria-current="page" href="~/Views/User/index">Home</a>
                        <a class="nav-link" href="~/*@@*Views/User/Login">Login</a>*@
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container w-50" style="height:600px">
        @RenderBody()
    </div>
    <footer class="bg-dark text-white" style="height:70px">
        <h3>
            @RenderSection("UserInfo", false)
        </h3>
    </footer>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>
