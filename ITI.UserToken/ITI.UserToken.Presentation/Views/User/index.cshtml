<div class="mt-3">
    <ul class="pagination">
        <li class="page-item">
            <a asp-page="/pagination" asp-route-currentpage="" class="page-link">Prev</a>
        </li>
        @for (var i = 1; i <= ViewBag.Count; i++)
        {
            <li class="page-item">
                <a asp-page="/pagination" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }
        <li class="page-item">
            <a asp-page="/pagination" asp-route-currentpage="" href="@Url.Action("index")" class="page-link">Next</a>
        </li>
    </ul>
</div>

